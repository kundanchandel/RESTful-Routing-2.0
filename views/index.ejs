<%- include ('./partials/header') %>
<h1>INDEX PAGE!</h1>

<% blogs.forEach(function(blog){%>
    <div>
        <h2><%=blog.title%></h2>
        <img src="<%= blog.image %>" height=400px alt="">
        <span><%= blog.created %></span>
        <p><%= blog.body.substring(0, 20) %>...</p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
    </div>
<%})  %>
<%- include ('./partials/footer') %>
